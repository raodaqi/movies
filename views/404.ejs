    <script>
    function sendQuest(url,type,data,callback){
        $.ajax({
              type: type,
              url: url,
              data: data,
              dataType: "json",
              success:function(result){
                callback.success(result);
              },
              error:function(error){
                alert("服务器出错");
                callback.error(error);
              }
            })
        }

        $(".submit").on("click",function(){
            var name = $("#movies-name").val();
            var name = name.replace(/(^\s*)|(\s*$)/g, "");
            if(!name.length){
                alert("电影名称不能为空");
            }else{
                var data = {
                    name: name
                }
                url = "/addmovie",
                type = "POST";
                sendQuest(url,type,data,{
                    success:function(result){
                        if(result.code == 200){
                            alert("提交成功")
                        }else{
                            alert(result.message);
                        }
                    },
                    error:function(error){
